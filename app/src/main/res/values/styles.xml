<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorForeground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!--
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        -->
    </style>

    <!-- Activity Login styles -->
    <style name="image_logo_style">
        <item name="android:src">@drawable/tv</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/activity_login_logo_description</item>
    </style>

    <style name="fields_style" parent="Base.Widget.AppCompat.EditText">
        <item name="android:ems">5</item>
        <item name="android:textSize">@dimen/activity_login_fields_text_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="email_field_style" parent="fields_style">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:background">@drawable/activity_login_user_email_background</item>
        <item name="android:drawableLeft">@drawable/login_field_left_drawable</item>
        <item name="android:drawableStart">@drawable/login_field_left_drawable</item>
    </style>

    <style name="password_field_style" parent="fields_style">
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/activity_login_password_background</item>
        <item name="android:drawableLeft">@drawable/password_field_left_drawable</item>
        <item name="android:drawableStart">@drawable/password_field_left_drawable</item>
    </style>

    <style name="login_button_style">
        <item name="android:text">@string/activity_login_button_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- Activity Main Screen styles -->
    <!-- Main Screen Navigation header styles -->
    <style name="activity_main_screen_nav_header_container_style">
        <item name="android:background">@drawable/material_header</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="activity_main_screen_nav_header_text_fields_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!-- Fragment Cabinet styles -->
    <style name="fragment_cabinet_id_style">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/cabinet_id_text_size</item>
    </style>

    <style name="fragment_cabinet_date_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/cabinet_date_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="fragment_cabinet_title_style">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/cabinet_title_text_size</item>
    </style>

    <!-- Fragment Current Packet styles -->
    <!-- Current Packet main layout styles -->
    <style name="Widget.MaterialSheetFab.Sheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginLeft">@dimen/sheet_spacing</item>
        <item name="android:layout_marginRight">@dimen/sheet_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardElevation">@dimen/fab_sheet_elevation</item>
        <item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>
        <item name="contentPadding">-3dp</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <style name="all_channels_style"
        parent="TextAppearance.MaterialSheetFab.Sheet.Item">
        <item name="android:drawableLeft">@drawable/current_packet_all_channels</item>
        <item name="android:drawableStart">@drawable/current_packet_all_channels</item>
        <item name="android:text">@string/all_channels</item>
    </style>

    <style name="favorite_channels_style"
        parent="TextAppearance.MaterialSheetFab.Sheet.Item">
        <item name="android:drawableLeft">@drawable/current_packet_favorite_channels</item>
        <item name="android:drawableStart">@drawable/current_packet_favorite_channels</item>
        <item name="android:text">@string/favorite_channels</item>
    </style>

    <style name="available_channels_style"
        parent="TextAppearance.MaterialSheetFab.Sheet.Item">
        <item name="android:drawableLeft">@drawable/current_packet_available_channels</item>
        <item name="android:drawableStart">@drawable/current_packet_available_channels</item>
        <item name="android:text">@string/available_channels</item>
    </style>

    <style name="censored_channels_style"
        parent="TextAppearance.MaterialSheetFab.Sheet.Item">
        <item name="android:drawableLeft">@drawable/current_packet_censored_channels</item>
        <item name="android:drawableStart">@drawable/current_packet_censored_channels</item>
        <item name="android:text">@string/censored_channels</item>
    </style>

    <!-- Current Packet content layout styles -->
    <style name="channel_available_style">
        <item name="android:src">@drawable/channel_is_available</item>
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="channel_details_style">
        <item name="android:paddingLeft">@dimen/current_packet_channels_details_container_padding</item>
        <item name="android:paddingRight">@dimen/current_packet_channels_details_container_padding</item>
    </style>
    
    <style name="channel_title_style">
        <item name="android:textSize">@dimen/current_packet_title_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="channels_number_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/current_packet_additional_text_size</item>
    </style>
    
    <style name="channels_separator_style">
        <item name="android:text">@string/separator</item>
        <item name="android:textSize">@dimen/current_packet_additional_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="channels_genre_style">
        <item name="android:textSize">@dimen/current_packet_additional_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="channels_info_style">
        <item name="android:textSize">@dimen/current_packet_info_text_size</item>
        <item name="android:textColor">@color/strong_grey</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>
