<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/activity_login_user_email_shape" />
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:top="@dimen/activity_login_stroke_disabling"
        android:right="@dimen/activity_login_stroke_disabling"
        android:left="@dimen/activity_login_stroke_disabling"
        android:bottom="@dimen/activity_login_stroke_enabling">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/activity_login_stroke_width"
                android:color="@color/grey" />
        </shape>
    </item>

</layer-list>