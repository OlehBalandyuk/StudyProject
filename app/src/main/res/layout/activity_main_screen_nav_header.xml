<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/material_header"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/nav_header_user_email"

        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/nav_header_user_logo"
        android:layout_below="@+id/nav_header_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activity_main_screen_nav_header_person_icon"/>

    <TextView
        android:id="@+id/nav_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nav_header_user_logo"
        android:layout_toEndOf="@+id/nav_header_user_logo"
        android:layout_alignBottom="@+id/nav_header_user_logo"
        android:padding="8dp"
        android:textStyle="bold|italic"
        android:text="@string/activity_main_screen_nav_header_user_name"/>

    <ImageView
        android:id="@+id/nav_header_balance_logo"
        android:layout_below="@+id/nav_header_user_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activity_main_screen_nav_header_bancnote_icon"/>

    <TextView
        android:id="@+id/nav_header_user_balance"
        android:layout_toRightOf="@+id/nav_header_balance_logo"
        android:layout_toEndOf="@+id/nav_header_balance_logo"
        android:layout_alignBottom="@+id/nav_header_balance_logo"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/activity_main_screen_nav_header_user_balance"/>

    <TextView
        android:id="@+id/user_balance_currency"
        android:layout_toRightOf="@+id/nav_header_user_balance"
        android:layout_toEndOf="@+id/nav_header_user_balance"
        android:layout_alignBottom="@+id/nav_header_user_balance"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/activity_main_screen_nav_header_currency"/>

    <ImageView
        android:id="@+id/nav_header_bonus_logo"
        android:layout_below="@+id/nav_header_balance_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activity_main_screen_nav_header_balance_icon"/>

    <TextView
        android:id="@+id/nav_header_user_bonus"
        android:layout_toRightOf="@+id/nav_header_bonus_logo"
        android:layout_toEndOf="@+id/nav_header_bonus_logo"
        android:layout_alignBottom="@+id/nav_header_bonus_logo"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/activity_main_screen_nav_header_user_bonus"/>

    <TextView
        android:id="@+id/user_bonus_currency"
        android:layout_toRightOf="@+id/nav_header_user_bonus"
        android:layout_toEndOf="@+id/nav_header_user_bonus"
        android:layout_alignBottom="@+id/nav_header_user_bonus"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/activity_main_screen_nav_header_user_bonuses_currency"/>

</RelativeLayout>
